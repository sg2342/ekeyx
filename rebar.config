%% -*- erlang -*-
{erl_opts, [debug_info]}.
{deps, []}.

{project_plugins, [rebar3_proper, rebar3_lint, erlfmt]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info, warn_missing_specs]},
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {xref_checks, [undefined_function_calls]},
        {dialyzer, [{warnings, [unmatched_returns, error_handling]}]},
        {erlfmt, [check]}
    ]}
]}.

{elvis, [
    #{
        dirs => ["src/**", "test/**"],
        filter => "*.erl",
        ruleset => erl_files,
        rules => [{elvis_style, no_throw, disable}]
    },
    #{
        dirs => ["."],
        filter => "rebar.config",
        ruleset => rebar_config
    }
]}.
